<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <com.ita.poppop.util.StatusBarSpaceView
                android:id="@+id/statusBarSpaceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/statusBarSpaceView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- 검색바 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_search_bar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_68"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/item_52"
                            android:layout_height="@dimen/item_52"
                            android:layout_marginVertical="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_16"
                            android:src="@drawable/_home_searchbar_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_search_area"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/item_38"
                            android:layout_marginHorizontal="@dimen/margin_8"
                            android:background="@drawable/_home_search_bar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/ib_notification"
                            app:layout_constraintStart_toEndOf="@+id/imageView2"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginVertical="@dimen/margin_7"
                                android:layout_marginStart="@dimen/margin_10"
                                android:src="@drawable/_home_search_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/gray_500" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/margin_10"
                                android:fontFamily="@font/pretendard_semibold"
                                android:letterSpacing="-0.03"
                                android:lineSpacingExtra="@dimen/text_4"
                                android:text="@string/home_searchbar_hint"
                                android:textColor="@color/gray_500"
                                android:textSize="@dimen/text_12"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imageView3"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.523" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_1"
                            android:background="@color/gray_300"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <ImageButton
                            android:id="@+id/ib_notification"
                            android:layout_width="@dimen/item_28"
                            android:layout_height="@dimen/item_28"
                            android:layout_marginVertical="@dimen/margin_16"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:background="@color/transparent"
                            android:src="@drawable/ic_notification_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_trend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        app:layout_constraintTop_toBottomOf="@+id/cl_search_bar">

                        <TextView
                            android:id="@+id/tv_trend_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_16"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="@string/home_trend_title"
                            android:textSize="@dimen/text_18"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_trend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:clipToPadding="false"
                            android:paddingHorizontal="@dimen/padding_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_trend_title" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_direction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_36"
                        app:layout_constraintTop_toBottomOf="@+id/cl_trend">

                        <TextView
                            android:id="@+id/tv_direction_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_16"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="@string/home_direction_title"
                            android:textSize="@dimen/text_18"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_direction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:clipToPadding="false"
                            android:paddingHorizontal="@dimen/padding_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_direction_title" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_waiting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_36"
                        app:layout_constraintTop_toBottomOf="@+id/cl_direction">

                        <TextView
                            android:id="@+id/tv_waiting_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_16"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="@string/home_waiting_title"
                            android:textSize="@dimen/text_18"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_waiting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:clipToPadding="false"
                            android:paddingHorizontal="@dimen/padding_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_waiting_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_8"
                        android:layout_marginTop="@dimen/margin_36"
                        android:background="#f0f0f0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cl_waiting" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_upcoming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        app:layout_constraintTop_toBottomOf="@+id/view">

                        <TextView
                            android:id="@+id/tv_upcoming_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_16"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="@string/home_upcoming_title"
                            android:textSize="@dimen/text_18"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/ib_upcoming_detail"
                            android:layout_width="@dimen/item_24"
                            android:layout_height="@dimen/item_24"
                            android:layout_marginEnd="@dimen/margin_24"
                            android:background="@color/transparent"
                            android:src="@drawable/chevron_right"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_upcoming_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_upcoming_title" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_upcoming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:paddingHorizontal="@dimen/padding_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_upcoming_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_100"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cl_upcoming" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tx_fab_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@drawable/_home_search_bar"
            android:fontFamily="@font/pretendard_semibold"
            android:paddingHorizontal="@dimen/padding_10"
            android:paddingVertical="@dimen/padding_2"
            android:text="팝업 리뷰 쓰기"
            android:elevation="-4dp"
            android:textColor="@color/gray_600"
            app:layout_constraintBottom_toBottomOf="@+id/fab_2"
            app:layout_constraintEnd_toStartOf="@+id/fab_2"
            app:layout_constraintTop_toTopOf="@+id/fab_2" />


        <ImageButton
            android:id="@+id/fab_2"
            android:layout_width="@dimen/item_56"
            android:layout_height="@dimen/item_56"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_24"
            android:elevation="-4dp"
            android:background="@drawable/shape_fab_background"
            app:backgroundTint="#E8EEF9"
            android:src="@drawable/user_icon"
            app:layout_constraintBottom_toTopOf="@+id/fab_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearanceOverlay="?attr/shapeAppearanceCornerExtraLarge" />

        <TextView
            android:id="@+id/tx_fab_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@drawable/_home_search_bar"
            android:fontFamily="@font/pretendard_semibold"
            android:paddingHorizontal="@dimen/padding_10"
            android:paddingVertical="@dimen/padding_2"
            android:elevation="-4dp"
            android:text="대기줄 작성하기"
            android:textColor="@color/gray_600"
            app:layout_constraintBottom_toBottomOf="@+id/fab_1"
            app:layout_constraintEnd_toStartOf="@+id/fab_2"
            app:layout_constraintTop_toTopOf="@+id/fab_1" />

        <ImageButton
            android:id="@+id/fab_1"
            android:layout_width="@dimen/item_56"
            android:layout_height="@dimen/item_56"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_24"
            android:background="@drawable/shape_fab_background"
            android:elevation="-4dp"
            android:src="@drawable/edit_icon"
            app:backgroundTint="#E8EEF9"
            app:layout_constraintBottom_toTopOf="@+id/cv_fab"
            app:layout_constraintEnd_toEndOf="parent" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_28"
            app:cardElevation="4dp"
            app:cardCornerRadius="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ToggleButton
                android:id="@+id/ib_fab"
                android:layout_width="@dimen/item_56"
                android:layout_height="@dimen/item_56"
                android:textOn=""
                android:textOff=""
                android:text=""
                android:background="@drawable/icon_fab_state_checked" />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>