<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.ita.poppop.util.StatusBarSpaceView
            android:id="@+id/statusBarSpaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mt_home_notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_52"
            android:background="@drawable/background_line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusBarSpaceView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_14"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="@dimen/text_8"
                android:text="@string/home_notification_frag_title"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/text_16" />

        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tap_layout_background"
            app:tabTextAppearance="@style/CustomTabTextAppearance"
            app:tabTextColor="@color/gray_500"
            app:tabSelectedTextColor="@color/gray_800"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mt_home_notification"
            app:tabIndicator="@drawable/shape_tab_layout_indicator"
            app:tabIndicatorAnimationDuration="0"
            app:tabIndicatorColor="@color/gray_800"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="3dp"
            app:tabRippleColor="@android:color/transparent">


            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새소식" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지사항" />
        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/fl_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tl_notification" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>