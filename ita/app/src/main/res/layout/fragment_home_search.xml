<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.ita.poppop.util.StatusBarSpaceView
            android:id="@+id/statusBarSpaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mt_home_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_52"
            android:background="@drawable/background_line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusBarSpaceView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_14"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="@dimen/text_8"
                android:text="@string/home_search_frag_title"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/text_16" />

        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home_search_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_38"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:background="@drawable/_home_search_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mt_home_search">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableStart="@drawable/_home_search_icon"
                android:drawableTint="@color/gray_500"
                android:paddingStart="@dimen/padding_10"
                android:drawablePadding="@dimen/padding_8"
                android:hint="@string/home_searchbar_hint"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="@dimen/text_4"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/gray_500"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home_search_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_12"
            android:paddingTop="@dimen/padding_12"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingHorizontal="@dimen/padding_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_home_search_area" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>