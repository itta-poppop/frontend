<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_info_review_detail_reply_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ita.poppop.util.StatusBarSpaceView
            android:id="@+id/statusBarSpaceView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_review_detail_reply_back"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/info_back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusBarSpaceView2" />

        <!--리뷰 화면-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info_review_detail_reply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_review_detail_reply_back">

            <ImageView
                android:id="@+id/iv_review_comment_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/info_story_profile_background"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_review_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#1c1c1c"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="wild_zeal"
                app:layout_constraintStart_toEndOf="@id/iv_review_comment_profile"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_review_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:lineSpacingExtra="6.5sp"
                android:text="2시간 전"
                app:layout_constraintStart_toStartOf="@id/tv_review_comment_username"
                app:layout_constraintTop_toBottomOf="@id/tv_review_comment_username" />

            <ImageView
                android:id="@+id/iv_info_review_detail_reply_dot"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/info_review_comment_dot_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_review_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="헉 ㅠㅠ 너무 가고 싶어요ㅠ"
                android:layout_marginTop="8dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#1e1e1e"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:breakStrategy="high_quality"
                app:layout_constraintStart_toStartOf="@id/tv_review_comment_username"
                app:layout_constraintTop_toBottomOf="@id/tv_review_comment_time"/>

            <TextView
                android:id="@+id/tv_write_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="대댓글쓰기"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="7sp"
                app:layout_constraintStart_toStartOf="@id/tv_review_comment_username"
                app:layout_constraintTop_toBottomOf="@id/tv_review_comment_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--댓글-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info_review_detail_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_info_review_detail_reply_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_review_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="38dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_300"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_review_reply" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- 대댓글 입력 창 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info_review_upload_comment_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_info_review_upload_comment_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="23dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_16"
                    android:paddingVertical="@dimen/item_8">

                    <EditText
                        android:id="@+id/edit_upload_comment_reply"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/item_24"
                        android:background="@android:color/transparent"
                        android:ellipsize="start"
                        android:fontFamily="@font/pretendard_medium"
                        android:hint="댓글을 입력해주세요"
                        android:inputType="text"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="8sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/gray_500"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_upload_comment_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="8sp"
                        android:text="게시"
                        android:textColor="@color/primary_blue"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>