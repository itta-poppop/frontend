<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.ita.poppop.util.StatusBarSpaceView
            android:id="@+id/statusBarSpaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mt_upload_review"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_52"
            android:background="@drawable/background_line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusBarSpaceView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_14"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="@dimen/text_8"
                android:text="팝업 리뷰 쓰기"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/text_16" />

        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/padding_16"
            android:clipChildren="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mt_upload_review">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="@dimen/item_72"
                android:layout_height="@dimen/item_72"
                android:layout_marginTop="@dimen/margin_28"
                android:clipChildren="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.046"
                    app:srcCompat="@drawable/_profile_load_icon" />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_profile_edit"
                    android:layout_width="@dimen/item_24"
                    android:layout_height="@dimen/item_24"
                    android:layout_gravity="end|bottom"
                    app:cardCornerRadius="@dimen/item_24"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/transparent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_4"
                        android:src="@drawable/icon_edit"
                        app:tint="@color/gray_800"/>

                </com.google.android.material.card.MaterialCardView>





            </FrameLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_40"
                android:fontFamily="@font/pretendard_medium"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="닉네임"
                android:textColor="@color/gray_800"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cl_search_area"
                android:layout_width="0dp"
                android:layout_height="@dimen/item_48"
                android:layout_marginTop="@dimen/margin_8"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#f5f5f5"
                app:strokeColor="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawablePadding="@dimen/padding_8"
                        android:hint="김수지"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="8sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingStart="@dimen/padding_10"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>







            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_40"
                android:layout_marginBottom="@dimen/margin_16"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/primary_blue"
                app:strokeColor="@color/transparent"
                app:backgroundTint="@color/gray_600"
                android:background="@drawable/shape_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="업로드"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="14sp"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="7sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>