<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="uploadWaitingViewModel"
            type="com.ita.poppop.viewmodel.empty.upload.UploadWaitingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.ita.poppop.util.StatusBarSpaceView
            android:id="@+id/statusBarSpaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mt_upload_review"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusBarSpaceView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_14"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="@dimen/text_8"
                android:text="현장 대기 인원"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/text_16" />

        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:cardBackgroundColor="@color/gray_300"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mt_upload_review"
            app:rippleColor="@color/transparent"
            app:strokeColor="@color/transparent">
            <ImageView
                android:id="@+id/iv_waiting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_wImg_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    app:cardBackgroundColor="#66000000"
                    app:cardCornerRadius="10dp"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:strokeColor="@color/transparent"
                    app:strokeWidth="@dimen/item_2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_8">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_trash"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_8"
                            android:text="삭제"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView9"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_wImg_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    app:cardBackgroundColor="#66000000"
                    app:cardCornerRadius="10dp"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:strokeColor="@color/transparent"
                    app:strokeWidth="@dimen/item_2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_8">

                        <ImageView
                            android:id="@+id/imageView91"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_gallery"
                            app:tint="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_8"
                            android:text="사진 재선택"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView91"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView91"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rv_upload_review"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:cardBackgroundColor="@color/gray_300"
            app:cardCornerRadius="10dp"
            android:elevation="1dp"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mt_upload_review"
            app:rippleColor="@color/transparent"
            app:strokeColor="@color/transparent">



            <LinearLayout
                android:id="@+id/ll_upload_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_upload_img"
                    android:layout_width="@dimen/item_44"
                    android:layout_height="@dimen/item_44"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_fab_background"
                    android:src="@drawable/_home_fab_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="8sp"
                    android:text="현장 대기 사진 올리기"
                    android:textColor="@color/gray_800"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@+id/ib_upload_img" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_24"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="7.5sp"
            android:text="위치"
            android:textColor="#3c3c3c"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_upload_review" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_search_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_48"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/gray_600"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_12">

                <TextView
                    android:id="@+id/tv_upload_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="7sp"
                    android:text='@{uploadWaitingViewModel.popupItem != null ? uploadWaitingViewModel.popupItem : "팝업스토어 / 전시를 검색하세요"}'
                    android:textColor="#3c3c3c"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ib_search_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/ib_search_location"
                    android:layout_width="@dimen/item_24"
                    android:layout_height="@dimen/item_24"
                    android:background="@color/transparent"
                    android:src="@drawable/chevron_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="7.5sp"
            android:text="대기 인원은 몇명인가요?"
            android:textColor="#3c3c3c"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mcv_search_area" />


        <!-- 리뷰 업로드 버튼 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/primary_blue_500"
                app:strokeWidth="@dimen/item_2">

                <TextView
                    android:id="@+id/tv_waiting_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:fontFamily="@font/pretendard_semibold"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="8.5sp"
                    android:gravity="center"
                    android:text="0명"
                    android:minEms="2"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_17"
                    android:textStyle="normal" />

            </com.google.android.material.card.MaterialCardView>

            <SeekBar
                android:id="@+id/pb_waiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumb="@drawable/seekbar_seekbar1_thumb"
                android:progressDrawable="@drawable/seekbar_seekbar1"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_16"
                android:splitTrack="false"
                android:progress="@{uploadWaitingViewModel.waitingCount}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView" />

            <TextView
                android:id="@+id/tv_waiting_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="7sp"
                android:maxLines="1"
                android:text="매우 적어요기다리지 않고 바로 입장 가능해요"
                android:textColor="@color/gray_600"
                android:textSize="13sp"
                android:textStyle="normal"
                android:layout_marginTop="@dimen/margin_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pb_waiting" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="22dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cl_upload_btn" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_upload_waiting"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:layout_marginTop="12dp"
                android:text="업로드"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="7sp"
                android:gravity="center"
                android:background="@drawable/info_upload_review_btn_background"
                android:enabled="false"
                app:backgroundTint="@color/button_background_tint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>