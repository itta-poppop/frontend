<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_info"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="@drawable/background_line_2"
            app:tabTextAppearance="@style/InfoCustomTabTextAppearance"
            style="@style/InfoCustomTabLayoutStyle"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팝업 정보"
                android:fontFamily="@font/pretendard_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:gravity="center_horizontal"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰"
                android:fontFamily="@font/pretendard_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:gravity="center_horizontal"/>

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/fl_info_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tl_info" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>