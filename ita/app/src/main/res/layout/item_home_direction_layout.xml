<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_direction_card"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="72dp"
        app:strokeColor="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tv_direction_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/gray_600"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:id="@+id/overlay_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle_overlay" />
            <TextView
                android:id="@+id/tv_direction_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="7.5sp"
                android:maxLines="1"
                android:text="성수역"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>

