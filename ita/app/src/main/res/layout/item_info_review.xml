<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_review_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="24dp">

        <ImageView
            android:id="@+id/iv_review_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/info_story_profile_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_review_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wild_zeal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/iv_review_profile"
            app:layout_constraintStart_toEndOf="@id/iv_review_profile"/>            />

        <TextView
            android:id="@+id/tv_review_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2시간 전"
            android:textSize="13sp"
            android:lineSpacingExtra="6.5sp"
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/tv_review_username"
            app:layout_constraintStart_toStartOf="@id/tv_review_username" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_review_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_time" />

        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전시가 애니 속 장면들을 잘 살려놔서 보는 내내 몰입감 장난 아니었어요. ‘거짓말과 아이’, '빛과 그림자’ 같은 테같은 테마도 은근 생각하게 만들더라구요."
            android:textSize="14sp"
            android:textColor="#505050"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="7sp"
            app:layout_constraintTop_toBottomOf="@id/rv_review_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_review_content"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_review_heart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/info_review_heart_icon"
                app:layout_constraintTop_toTopOf="@id/cl_comments"
                app:layout_constraintStart_toStartOf="@id/cl_comments"/>

            <TextView
                android:id="@+id/tv_review_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="med"
                android:text="12"
                android:textSize="15sp"
                android:textColor="@color/gray_700"
                android:lineSpacingExtra="7sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_review_heart"
                app:layout_constraintStart_toEndOf="@id/iv_review_heart"/>

            <ImageView
                android:id="@+id/iv_reivew_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/info_review_comment_icon"
                app:layout_constraintTop_toTopOf="@id/iv_review_heart"
                app:layout_constraintStart_toEndOf="@id/tv_review_heart"/>

            <TextView
                android:id="@+id/tv_review_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="15sp"
                android:textColor="@color/gray_700"
                android:lineSpacingExtra="7sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_review_heart"
                app:layout_constraintStart_toEndOf="@id/iv_reivew_comment"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>