<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info_review_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/iv_comment_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:background="@drawable/info_story_profile_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginEnd="7dp"
                android:background="@color/gray_400"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_comment_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_comment_profile" />

            <TextView
                android:id="@+id/tv_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wild_zeal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="@id/iv_comment_profile"
                app:layout_constraintStart_toEndOf="@id/iv_comment_profile"/>            />

            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2시간 전"
                android:textSize="13sp"
                android:lineSpacingExtra="6.5sp"
                android:textColor="@color/gray_600"
                app:layout_constraintTop_toBottomOf="@id/tv_comment_username"
                app:layout_constraintStart_toStartOf="@id/tv_comment_username" />

            <ImageView
                android:id="@+id/iv_info_review_comment_dot"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/info_review_comment_dot_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_comment_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                android:text="헉 ㅠㅠ 너무 가고 싶어요ㅠ"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                android:textStyle="normal"
                android:breakStrategy="high_quality"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_comment_time"
                app:layout_constraintTop_toBottomOf="@id/tv_comment_time" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info_review_comment_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cl_info_review_comment"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_marginStart="11dp"
                android:src="@drawable/l_comment_reply_icon"
                app:layout_constraintEnd_toStartOf="@+id/tv_comment_reply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:paddingTop="12dp"
                android:text="답글"
                android:fontFamily="@font/pretendard_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="7sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_comment_reply_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="2"
                android:fontFamily="@font/pretendard_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="7sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_comment_reply"
                app:layout_constraintStart_toEndOf="@id/tv_comment_reply" />
            <TextView
                android:id="@+id/tv_comment_reply_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개"
                android:fontFamily="@font/pretendard_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="7sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_comment_reply"
                app:layout_constraintStart_toEndOf="@id/tv_comment_reply_num" />

            <ImageView
                android:id="@+id/iv_info_review_reply_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/chevron_right"
                app:layout_constraintBottom_toBottomOf="@+id/tv_comment_reply"
                app:layout_constraintStart_toEndOf="@+id/tv_comment_reply_l"
                app:tint="@color/gray_600" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>