<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_info_review_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp">

        <ImageView
            android:id="@+id/iv_reply_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/info_story_profile_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_reply_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wild_zeal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/iv_reply_profile"
            app:layout_constraintStart_toEndOf="@id/iv_reply_profile"/>            />

        <TextView
            android:id="@+id/tv_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2시간 전"
            android:textSize="13sp"
            android:lineSpacingExtra="6.5sp"
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/tv_reply_username"
            app:layout_constraintStart_toStartOf="@id/tv_reply_username" />

        <ImageView
            android:id="@+id/iv_info_review_reply_dot"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/info_review_comment_dot_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="헉 ㅠㅠ 너무 가고 싶어요ㅠ"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#1e1e1e"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            app:layout_constraintTop_toBottomOf="@id/tv_reply_time"
            app:layout_constraintStart_toStartOf="@id/tv_reply_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>