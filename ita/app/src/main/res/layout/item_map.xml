<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_168">

                <ImageView
                    android:id="@+id/iv_map"
                    android:layout_width="@dimen/item_132"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_map_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="8.5sp"
                    android:maxLines="1"
                    android:text="제목"
                    android:textColor="@color/gray_900"
                    android:textSize="17sp"
                    android:textStyle="bold|normal"
                    app:layout_constraintBottom_toTopOf="@id/tv_map_period"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_map_period" />

                <TextView
                    android:id="@+id/tv_map_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_16"
                    android:text="기간"  android:fontFamily="@font/pretendard_medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="@color/gray_800"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="7sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_map" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>