<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="@dimen/item_128"
            android:layout_height="@dimen/item_128"
            android:src="#D9D9D9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_upcoming_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="6.5sp"
            android:text="서울 성동구 고산자로 71 성수문화예술마당"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_600"
            android:textSize="@dimen/text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_map"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_upcoming_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8.5sp"
            android:text="문도 픽사(Mundo Pixar): 픽사, 상상의 세계로"
            android:textColor="@color/black"
            android:textSize="@dimen/text_17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_map"
            app:layout_constraintTop_toBottomOf="@+id/tv_upcoming_location" />

        <TextView
            android:id="@+id/tv_upcoming_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_16"
            android:ellipsize="end"
            android:fontFamily="@font/pretendard_semibold"
            android:maxLines="1"
            android:text="25.05.05 - 25.06.29"
            android:textColor="@color/gray_800"
            android:textSize="@dimen/text_13"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="6.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_map"
            app:layout_constraintTop_toBottomOf="@+id/tv_upcoming_title" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            app:strokeColor="@color/transparent"
            app:cardBackgroundColor="@color/gray_400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_map">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_2"
                android:layout_marginHorizontal="@dimen/margin_8"
                android:text="D-3"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="@dimen/text_14"
                android:textColor="@color/gray_800"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="7sp"/>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>