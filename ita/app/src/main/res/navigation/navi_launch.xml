<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navi_launch"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ita.poppop.view.main.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ita.poppop.view.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_emptyFragment"
            app:destination="@id/emptyFragment" />
        <action
            android:id="@+id/action_mainFragment_to_navi_home_notification"
            app:destination="@id/navi_home_notification" />
        <action
            android:id="@+id/action_mainFragment_to_navi_home_search"
            app:destination="@id/navi_home_search" />
        <action
            android:id="@+id/action_mainFragment_to_navi_home_story"
            app:destination="@id/navi_home_story"
            app:enterAnim="@anim/slide_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_mainFragment_to_navi_profile_edit"
            app:destination="@id/navi_profile_edit" />
        <action
            android:id="@+id/action_mainFragment_to_navi_setting"
            app:destination="@id/navi_setting" />
        <action
            android:id="@+id/action_mainFragment_to_navi_info"
            app:destination="@id/navi_info" />
        <action
            android:id="@+id/action_mainFragment_to_navi_home_upcoming"
            app:destination="@id/navi_home_upcoming" />
        <action
            android:id="@+id/action_mainFragment_to_navi_upload_waiting"
            app:destination="@id/navi_upload_waiting"
            app:enterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down" />
        <action
            android:id="@+id/action_mainFragment_to_navi_upload_review"
            app:destination="@id/navi_upload_review"
            app:enterAnim="@anim/slide_up"
            app:popExitAnim="@anim/slide_down" />
    </fragment>
    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.ita.poppop.view.empty.EmptyFragment"
        android:label="EmptyFragment" >

        <argument
            android:name="type"
            app:argType="string" />
    </fragment>
    <include app:graph="@navigation/navi_home_notification" />
    <include app:graph="@navigation/navi_home_search" />
    <include app:graph="@navigation/navi_home_story" />
    <include app:graph="@navigation/navi_profile_edit" />
    <include app:graph="@navigation/navi_setting" />
    <include app:graph="@navigation/navi_info" />
    <include app:graph="@navigation/navi_home_upcoming" />
    <include app:graph="@navigation/navi_upload_waiting" />
    <include app:graph="@navigation/navi_upload_review" />
</navigation>