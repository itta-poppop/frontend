<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- info tab layout custom style -->
    <style name="InfoCustomTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/gray_600</item>
        <item name="tabSelectedTextColor">@color/primary_blue</item>
        <item name="tabIndicatorColor">@color/primary_blue</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabPaddingBottom">3dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">start</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="InfoCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

</resources>